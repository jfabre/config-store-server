= form_for([@organization, @store]) do |f|
  -if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, class: 'input'
    = f.text_field :name, class: 'input'
  .actions
    = f.submit 'Save', class: 'btn btn-success'
    = link_to 'Back', organization_stores_path(@organization), class: 'btn'